<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="toolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/samsungsharpsans_bold</item>
    </style>

    <style name="MaterialButtonAccentStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_material_button_accent</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/avenir_heavy</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="ChipTextAppearanceNormal" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/avenit_medium</item>
        <item name="android:fontFamily">@font/avenit_medium</item>
    </style>

    <style name="cardViewAppbarStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="cardViewBottomBarStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="emptyTextStyle">
        <item name="android:fontFamily">@font/samsungsharpsans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0c1822</item>
    </style>

    <style name="createListingInputStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">@dimen/create_listing_input_height</item>
        <item name="android:paddingStart">@dimen/create_listing_margin_left_right</item>
    </style>

    <style name="SilverSandHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/silver_sand</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.SilverHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/SilverSandHintStyle</item>
        <item name="android:textColorHint">@color/silver_sand</item>
    </style>

    <style name="createListingHintStyle">
        <item name="android:textColor">#838383</item>
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="createListingHintStyle.Bold">
        <item name="android:textColor">#858b90</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="createListingToggleStyle">
        <item name="android:fontFamily">@font/samsungsharpsans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/listing_type_color_selector</item>
        <item name="backgroundTint">@color/listing_type_bg_selector</item>
    </style>

    <style name="NumberPickerTextStyle">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textAppearanceLarge">@style/materialDialogStyle.Subtitle1</item>
        <item name="android:textAppearanceMedium">@style/materialDialogStyle.Subtitle1</item>
        <item name="android:textAppearanceSmall">@style/materialDialogStyle.Subtitle1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="materialDialogStyle">
        <item name="textAppearanceHeadline1">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceHeadline2">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceHeadline3">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceHeadline4">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceHeadline5">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceHeadline6">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceSubtitle1">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceSubtitle2">@style/materialDialogStyle.Button</item>
        <item name="textAppearanceBody1">@style/materialDialogStyle.Subtitle1</item>
        <item name="textAppearanceBody2">@style/materialDialogStyle.Subtitle1</item>
        <item name="textAppearanceButton">@style/materialDialogStyle.Button2</item>
        <item name="android:textAppearanceLarge">@style/materialDialogStyle.Subtitle1</item>
        <item name="android:textAppearanceMedium">@style/materialDialogStyle.Subtitle1</item>
        <item name="android:textAppearanceSmall">@style/materialDialogStyle.Subtitle1</item>
    </style>

    <style name="materialDialogStyle.Button" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/samsungsharpsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="materialDialogStyle.Subtitle1" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="materialDialogStyle.Button2" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/samsungsharpsans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

