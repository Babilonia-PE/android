<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FirebaseUI" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/auth_action_bar</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/FirebaseUI.Button</item>
    </style>

    <style name="FirebaseUI.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>