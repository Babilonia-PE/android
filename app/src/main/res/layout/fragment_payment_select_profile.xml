<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/cardViewAppbarStyle">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:elevation="6dp"
                app:theme="@style/toolbarTheme"
                app:title="@string/publish_your_listing" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvSelectProfileDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/select_your_profile"
            android:textAlignment="center"
            android:textColor="@color/gunmetal"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnOwner"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rect_outlined"
            android:src="@drawable/ic_owner_56"
            app:layout_constraintEnd_toStartOf="@id/btnRealtor"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelectProfileDescription" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnRealtor"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rect_rounded_dirty_white"
            android:src="@drawable/ic_realtor_56"
            app:layout_constraintEnd_toStartOf="@id/btnConstructor"
            app:layout_constraintStart_toEndOf="@id/btnOwner"
            app:layout_constraintTop_toBottomOf="@id/tvSelectProfileDescription" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnConstructor"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rect_rounded_dirty_white"
            android:src="@drawable/ic_construction_company_56"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnRealtor"
            app:layout_constraintTop_toBottomOf="@id/tvSelectProfileDescription" />

        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:paddingTop="12dp"
            android:text="@string/owner"
            android:textAlignment="center"
            android:textColor="@color/dark_blue_grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/btnOwner"
            app:layout_constraintStart_toStartOf="@id/btnOwner"
            app:layout_constraintTop_toBottomOf="@id/btnOwner" />

        <TextView
            android:id="@+id/tvRealtor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:paddingTop="12dp"
            android:text="@string/realtor"
            android:textAlignment="center"
            android:textColor="@color/steel"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/btnRealtor"
            app:layout_constraintStart_toStartOf="@id/btnRealtor"
            app:layout_constraintTop_toBottomOf="@id/btnRealtor" />

        <TextView
            android:id="@+id/tvConstructor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:paddingTop="12dp"
            android:text="@string/construction_company"
            android:textAlignment="center"
            android:textColor="@color/steel"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/btnConstructor"
            app:layout_constraintStart_toStartOf="@id/btnConstructor"
            app:layout_constraintTop_toBottomOf="@id/btnConstructor" />

        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_roman"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:lineHeight="24sp"
            android:text="@string/construction_company"
            android:textColor="@color/steel"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnSelectPaymentProfile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectPaymentProfile"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/select_profile"
            android:textColor="@android:color/white"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>