<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.telephony.PhoneNumberUtils" />

        <variable
            name="model"
            type="com.babilonia.presentation.flow.main.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".presentation.flow.main.profile.ProfileFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:elevation="6dp"
            android:onClick="@{() -> model.navigateToEditName()}"
            android:padding="16dp"
            android:src="@drawable/ic_edit_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@id/card"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/ivProfileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/create_listing_margin_left_right"
            android:elevation="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/samsungsharpsans_bold"
            android:letterSpacing="0.06"
            android:maxLines="2"
            android:onClick="@{() -> model.navigateToEditName()}"
            android:text="@{model.userLiveData.firstName+' '+model.userLiveData.lastName}"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfileAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivProfileAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivProfileAvatar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_camera_small"
            app:backgroundTint="@android:color/white"
            app:elevation="10dp"
            app:layout_anchorGravity="end|bottom"
            app:layout_constraintBottom_toTopOf="@+id/nestedScroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nestedScroll"
            app:tint="@color/listing_bottombar_gray" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvEmailTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:layout_marginTop="27dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:onClick="@{() -> model.navigateToEmailEdit()}"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvEmailValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:layout_marginEnd="@dimen/create_listing_margin_left_right"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:onClick="@{() -> model.navigateToEmailEdit()}"
                    android:text="@{model.userLiveData.email}"
                    android:textColor="@color/listing_bottombar_gray"
                    android:textSize="14sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmailTitle"
                    tools:text="usermail@domain.com" />

                <View
                    android:id="@+id/emailDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvEmailValue"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailValue" />

                <TextView
                    android:id="@+id/tvPhoneTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/your_phone_number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailDivider" />

                <TextView
                    android:id="@+id/tvPhoneValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"

                    android:textColor="@color/listing_bottombar_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvPhoneTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneTitle"
                    tools:text="+1 (222) 234 324" />

                <View
                    android:id="@+id/phoneDivider"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="18dp"
                    android:background="#e6e7e8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneValue" />

                <TextView
                    android:id="@+id/tvCurrencyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:layout_marginTop="27dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/currency"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phoneDivider" />

                <TextView
                    android:id="@+id/tvCurrencyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="USD"
                    android:textColor="@color/listing_bottombar_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvCurrencyTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvCurrencyTitle" />

                <View
                    android:id="@+id/currencyDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvCurrencyValue"
                    app:layout_constraintTop_toBottomOf="@id/tvCurrencyValue" />

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:onClick="@{() -> model.navigateToAccount()}"
                    android:text="@string/account"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/currencyDivider" />

                <View
                    android:id="@+id/accountDivider"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:background="#e6e7e8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccount" />

                <TextView
                    android:id="@+id/tvAboutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/avenir_heavy"
                    android:letterSpacing="0.02"
                    android:text="@string/about"
                    android:textAllCaps="true"
                    android:textColor="#858b90"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountDivider" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:onClick="@{() -> model.navigateToTermsAndConditions()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAboutTitle" />

                <View
                    android:id="@+id/termsDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvTerms"
                    app:layout_constraintTop_toBottomOf="@id/tvTerms" />

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="@dimen/create_listing_margin_left_right"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:onClick="@{() -> model.navigateToPrivacyPolicy()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/termsDivider" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
