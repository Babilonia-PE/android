<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/cardViewAppbarStyle">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:elevation="6dp"
                app:theme="@style/toolbarTheme"
                app:title="@string/check_out" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/avenir_heavy"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPlanIcon"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <ImageView
            android:id="@+id/ivPlanIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/transparent"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_payment_plan_premium_blue_24"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@id/tvPlanName"
            app:layout_constraintEnd_toStartOf="@id/tvPlanName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPlanName" />

        <TextView
            android:id="@+id/tvPaymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/samsungsharpsans_bold"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/tvPaymentPeriod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlanName"
            tools:text="$4.99"/>

        <TextView
            android:id="@+id/tvPaymentPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/avenit_medium"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/steel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPaymentAmount"
            app:layout_constraintBottom_toBottomOf="@id/tvPaymentAmount"
            tools:text="/ 30 days" />

        <com.stripe.android.view.CardNumberTextInputLayout
            android:id="@+id/tilStripeCardNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.SilverHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:accessibilityTraversalBefore="@+id/etExpiryDate"
            android:nextFocusRight="@+id/etExpiryDate"
            android:nextFocusForward="@+id/etExpiryDate"
            android:nextFocusDown="@+id/etExpiryDate"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPaymentAmount">

            <com.stripe.android.view.CardNumberEditText
                android:id="@+id/etStripeCardNumber"
                style="@style/createListingInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/card_number_hint"
                android:imeOptions="actionNext" />

        </com.stripe.android.view.CardNumberTextInputLayout>

        <ImageView
            android:id="@+id/ivCardBrand"
            android:layout_width="@dimen/card_brand_view_width"
            android:layout_height="@dimen/card_brand_view_height"
            android:layout_marginEnd="@dimen/stripe_card_icon_padding"
            app:layout_constraintEnd_toEndOf="@id/tilStripeCardNumber"
            app:layout_constraintTop_toTopOf="@id/tilStripeCardNumber"
            app:layout_constraintBottom_toBottomOf="@id/tilStripeCardNumber" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilExpiryDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.SilverHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:nextFocusRight="@+id/etCvc"
            android:nextFocusForward="@+id/etCvc"
            android:nextFocusDown="@+id/etCvc"
            android:nextFocusLeft="@id/etStripeCardNumber"
            android:nextFocusUp="@id/etStripeCardNumber"
            app:layout_constraintEnd_toStartOf="@id/tilCvc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilStripeCardNumber">

            <com.stripe.android.view.ExpiryDateEditText
                android:id="@+id/etExpiryDate"
                style="@style/createListingInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:digits="@string/stripe_expiration_date_allowlist"
                android:hint="@string/card_hint_expiration_date" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCvc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.SilverHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:nextFocusRight="@+id/etCardholderName"
            android:nextFocusForward="@+id/etCardholderName"
            android:nextFocusDown="@+id/etCardholderName"
            android:nextFocusLeft="@id/etExpiryDate"
            android:nextFocusUp="@id/etExpiryDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tilExpiryDate"
            app:layout_constraintTop_toBottomOf="@id/tilStripeCardNumber">

            <com.stripe.android.view.CvcEditText
                android:id="@+id/etCvc"
                style="@style/createListingInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCardholderName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.SilverHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:nextFocusLeft="@id/etCvc"
            android:nextFocusUp="@id/etCvc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilExpiryDate">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCardholderName"
                style="@style/createListingInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_on_card"
                android:textAllCaps="true"
                android:inputType="textPersonName"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>