<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvListingTypeTitle"
        style="@style/createListingHintStyle.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/create_listing_margin_left_right"
        android:layout_marginTop="@dimen/create_listing_margin_top_bottom"
        android:text="@string/listing_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btSale"
        style="@style/createListingToggleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/create_listing_margin_left_right"
        android:layout_marginTop="@dimen/create_listing_margin_left_right"
        android:layout_marginEnd="4dp"
        android:text="@string/for_sale"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btRent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvListingTypeTitle" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btRent"
        style="@style/createListingToggleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/create_listing_margin_left_right"
        android:layout_marginEnd="@dimen/create_listing_margin_left_right"
        android:text="@string/for_rent"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btSale"
        app:layout_constraintTop_toBottomOf="@id/tvListingTypeTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiPropertyType"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/create_listing_margin_left_right"
        android:layout_marginTop="@dimen/create_listing_margin_top_bottom"
        android:layout_marginEnd="@dimen/create_listing_margin_left_right"
        android:hint="@string/property_type"
        app:endIconDrawable="@drawable/ic_dropdown"
        app:endIconMode="custom"
        app:hintTextColor="@color/text_color_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSale">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPropertyType"
            style="@style/createListingInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            tools:ignore="Deprecated"
            tools:text="test" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.babilonia.presentation.view.priceview.RangeBarWithChart
        android:id="@+id/rangeBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tiPropertyType"
        app:layout_constraintStart_toStartOf="@+id/tiPropertyType"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceRange">

    </com.babilonia.presentation.view.priceview.RangeBarWithChart>

    <TextView
        android:id="@+id/tvPriceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/avenir_heavy"
        android:letterSpacing="0.02"
        android:text="@string/price_range"
        android:textAllCaps="true"
        android:textColor="@color/steel"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tiPropertyType"
        app:layout_constraintTop_toBottomOf="@+id/tiPropertyType" />

    <TextView
        android:id="@+id/tvPriceFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/avenit_medium"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/dark_blue_grey"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPriceRange"
        app:layout_constraintStart_toEndOf="@id/tvPriceRange"
        tools:text="$0" />

    <TextView
        android:id="@+id/tvPriceDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenit_medium"
        android:lineSpacingExtra="6sp"
        android:text="-"
        android:textColor="@color/dark_blue_grey"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPriceRange"
        app:layout_constraintEnd_toStartOf="@+id/tvPriceTo"
        app:layout_constraintStart_toEndOf="@id/tvPriceFrom" />

    <TextView
        android:id="@+id/tvPriceTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/avenit_medium"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/dark_blue_grey"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPriceRange"
        app:layout_constraintStart_toEndOf="@id/tvPriceFrom"
        tools:text="$1.5M" />

</androidx.constraintlayout.widget.ConstraintLayout>