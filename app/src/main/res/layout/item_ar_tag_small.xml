<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ar_tag_small_width"
    android:layout_height="@dimen/ar_tag_small_height"
    app:cardBackgroundColor="@color/bg_ar_tag_selector"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTagImage"
            android:layout_width="@dimen/ar_tag_small_image_width"
            android:layout_height="@dimen/ar_tag_small_image_height"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ar_tag_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTagCost"
            style="@style/ArTag.PriceStyle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:autoSizeMaxTextSize="@dimen/fs_ar_tag_small_price_max"
            app:autoSizeMinTextSize="@dimen/fs_ar_tag_small_price_min"
            app:autoSizeStepGranularity="@dimen/fs_default_scale_step"
            app:autoSizeTextType="uniform"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ivTagImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$750,900" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTagDistanceCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvTagCost"
            app:layout_constraintTop_toBottomOf="@+id/tvTagCost"
            tools:text="99" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTagDistanceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTagDistanceCount"
            app:layout_constraintStart_toEndOf="@+id/tvTagDistanceCount"
            app:layout_constraintTop_toTopOf="@+id/tvTagDistanceCount"
            tools:text="meters" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>