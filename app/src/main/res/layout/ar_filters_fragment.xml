<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBottomFilterRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ar_scene_bottom_listing_preview"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivArrowHideFilters"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:paddingStart="96dp"
        android:paddingEnd="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_arrow_hide_down_silver_16dp" />

    <com.babilonia.presentation.view.filter.ArFiltersView
        android:id="@+id/filterGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivArrowHideFilters" />

    <LinearLayout
        android:id="@+id/btApplyFilters"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corners_shape_4dp"
        android:backgroundTint="@color/colorAccent"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/create_listing_margin_left_right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/create_listing_margin_left_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterGeneral">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samsungsharpsans_bold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.06"
            android:text="@string/apply_filters"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="16sp" />

<!--        <TextView-->
<!--            android:id="@+id/tvFiltersCount"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/avenit_medium"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:letterSpacing="0.06"-->
<!--            android:text="@{@string/apply_filters"-->
<!--            android:textColor="#ffffff"-->
<!--            android:textSize="12sp" />-->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>