<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.flow.main.publish.description.ListingDescriptionFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/cardViewAppbarStyle">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:elevation="6dp"
                android:theme="@style/toolbarTheme"
                app:title="@string/about_home" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/etDescription"
            android:textSize="16sp"
            android:textColor="@color/description_color"
            android:lineSpacingExtra="12sp"
            android:fontFamily="@font/avenir_roman"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/create_listing_margin_left_right"
            android:background="@null"
            android:gravity="top"
            android:scrollbars="vertical"
            tools:text="Finding the perfect learning tool for Flash is a daunting task to any novice web developer. One can find help in a number of ways through books, friends and private tutors. These methods are great but not often readily available, nor cheap!"
            android:importantForAutofill="no"
            android:padding="0dp"
            android:textColorHighlight="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            tools:targetApi="o" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
